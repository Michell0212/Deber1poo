#include <stdio.h>


int multiplicacion(int x, int y){
	int z;
	z=x*y;
	return z;
	
}

void imprimaUnCuadradoDeArrobas(int n){
	for (int i=0; i<=n; i++){
	printf("\n");
	for (int j=0; j<n; j++)
		printf("@");
	}
}

int main (){
		int i;
		
		do{
			printf("\nIngrese un numero: ");
			scanf ("%d", &i);
			imprimaUnCuadradoDeArrobas(i);
		}while(i>0);
		
}
